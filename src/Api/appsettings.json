{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "DurableHttp",
        "Args": {
          "requestUri": "http://logstash:5000"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=postgres;Database=appdb;Username=appuser;Password=apppassword",
    "Mongo": "mongodb://mongo:27017/appdb"
  },
  "Redis": {
    "ConnectionString": "redis:6379"
  }
}